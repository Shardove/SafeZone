<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/listview_help2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/listview_help"
        android:layout_alignParentStart="true"
        android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:paddingEnd="50dp"
        android:paddingRight="50dp"
        android:paddingBottom="30dp"
        android:layout_alignParentLeft="true">

    </ListView>

    <ListView
        android:id="@+id/listview_help"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
        android:paddingLeft="10dp"
        android:paddingRight="50dp"
        android:paddingBottom="30dp"
        android:paddingStart="10dp"
        android:paddingEnd="50dp" >

    </ListView>

    <Button
        android:id="@+id/btn_home2"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/whitebtn"
        android:text="@string/map2" />

    <Button
        android:id="@+id/btn_request2"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/whitebtn"
        android:text="@string/request_help2" />

</RelativeLayout>